# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.RunJPlagController.getLoginPage
GET     /registration                       controllers.RunJPlagController.getRegisterPage
GET     /home                               controllers.RunJPlagController.getHomepage
GET     /detection                          controllers.RunJPlagController.getDetectionMainPage
GET     /result                             controllers.RunJPlagController.getSelectPastDetectionPage
GET     /result/:detectionID                controllers.RunJPlagController.getResultPage(detectionID: String)
GET     /result/codeComparison/:matchIndex  controllers.RunJPlagController.getCodeComparisonPage(fromPlagiarisedGroup: Option[String], matchIndex: String)
GET     /result/detail/:group               controllers.RunJPlagController.getResultDetailPage(group: String)
GET     /checkForRunningDetection           controllers.RunJPlagController.getRunningDetections
GET     /checkForDetectionRan               controllers.RunJPlagController.getDetectionRan
GET     /getUploadedFiles                   controllers.RunJPlagController.getUploadedFiles
GET     /getUploadedBasefile                controllers.RunJPlagController.getUploadedBaseFile
GET     /logout                             controllers.RunJPlagController.logout


POST    /login                              controllers.RunJPlagController.login
POST    /register                           controllers.RunJPlagController.register
POST    /validateDetection                  controllers.RunJPlagController.validateDetection
POST    /studentFileUpload                  controllers.RunJPlagController.studentFileUpload
POST    /clearUploadedFiles                 controllers.RunJPlagController.clearUploadedFiles
POST    /runJPlag                           controllers.RunJPlagController.runJPlag
POST    /submitSettings                     controllers.RunJPlagController.submitSettings
POST    /deleteSingleUploadedFile           controllers.RunJPlagController.deleteSingleUploadedFile


# Javascript route
GET     /javascriptRoutes                   controllers.RunJPlagController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
