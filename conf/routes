# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.RunJPlagController.homepage(status: Option[Boolean])
GET     /detection                          controllers.RunJPlagController.detection
GET     /runJPlag                           controllers.RunJPlagController.runJPlag()
GET     /result                             controllers.RunJPlagController.result
GET     /result/codeComparison              controllers.RunJPlagController.resultCodeComparison(matchIndex: Int)
GET     /javascriptRoutes                   controllers.Application.javascriptRoutes
GET     /result/detail                      controllers.RunJPlagController.resultDetail(group: Int)
POST    /saveFile                           controllers.RunJPlagController.upload()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
